<h1>See all Categories</h1>
<% @categories.each do |category| %>
  <p><%= link_to category.name, category_path(category) %></p>
<% end %>

<h2>Erstelle einen neuen Kategorie</h2>
<%= simple_form_for @category do |f| %>
  <%= f.input :name %>
  <%= f.button :submit %>
<% end %>

<p><%= link_to "log-out", destroy_user_session_path %></p>